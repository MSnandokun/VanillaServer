{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "apiProfile": "2018-06-01-profile",
    "parameters": {
        "subnet1AddressPrefix": {
            "defaultValue": "192.168.1.0/24",
            "type": "string"
        },
        "subnet2AddressPrefix": {
            "defaultValue": "192.168.2.0/24",
            "type": "string"
        },
        "sa01_name": {
            "defaultValue": "sa01",
            "type": "string"
        },
        "vn01_name": {
            "defaultValue": "vn01",
            "type": "string"
        },
        "nsg_name": {
            "defaultValue": "nsg01",
            "type": "string"
        },
        "pipDC01_name": {
            "defaultValue": "pipDC01",
            "type": "string"
        },
        "nicDC01_name": {
            "defaultValue": "nicDC01",
            "type": "string"
        },
        "vm_name": {
            "defaultValue": "dc01",
            "type": "string"
        },
        "admin_name": {
            "defaultValue": "Admin01",
            "type": "string"
        },
        "admin_password": {
            "defaultValue": "",
            "type": "string"
        },
        "prefix": {
            "type": "string",
            "defaultValue": "sa"
        },
        "DNSLabel": {
            "type": "string",
            "defaultValue": "iaaclab"
        },
        "vmsize": {
            "type": "string",
            "allowedValues": [
                "Standard_B2s",
                "Standard_B4ms",
                "Standard_B8ms",
                "Standard_DS3_v2",
                "Standard_DS4_v2"
            ],
            "defaultValue": "Standard_B2s"
        }
    },
    "variables": {
        "storageAccountNamePure": "[concat(parameters('prefix'), uniqueString(resourceGroup().id))]",
        "storageAccountName": "[if(greater(length(variables('storageAccountNamePure')), 40), substring(variables('storageAccountNamePure'), sub(length(variables('storageAccountNamePure')), 40), 40) , variables('storageAccountNamePure'))]"
    },
    "functions": [],
    "resources": [
        {
            "name": "[variables('storageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "tags": {
                "displayName": "[parameters('sa01_name')]"
            },
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "properties": {
                "accessTier": "Hot",
                "supportsHttpsTrafficOnly": false
            }
        },

        {
            "name": "[parameters('vn01_name')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "vn01"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "192.168.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "subnet1",
                        "properties": {
                            "addressPrefix": "[parameters('subnet1AddressPrefix')]",
                            "serviceEndpoints": [],
                            "delegations": []
                        }
                    },
                    {
                        "name": "subnet2",
                        "properties": {
                            "addressPrefix": "[parameters('subnet2AddressPrefix')]",
                            "serviceEndpoints": [],
                            "delegations": []
                        }
                    }
                ]
            }
        },

        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2018-12-01",
            "name": "[concat(parameters('vn01_name'), '/subnet1')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vn01_name'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('subnet1AddressPrefix')]",
                "serviceEndpoints": [],
                "delegations": []
            }
        },

        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2018-12-01",
            "name": "[concat(parameters('vn01_name'), '/subnet2')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vn01_name'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('subnet2AddressPrefix')]",
                "serviceEndpoints": [],
                "delegations": []
            }
        },

        {
            "name": "[parameters('nsg_name')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "default-allow-rdp",
                        "properties": {
                            "description": "description",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3389",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1000,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },

        {
            "name": "[parameters('pipDC01_name')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "[parameters('pipDC01_name')]"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[concat(parameters('vm_name'),parameters('DNSLabel'))]"
                }
            }
        },

        {
            "name": "[parameters('nicDC01_name')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "[parameters('nicDC01_name')]"
            },
            "dependsOn": [
                "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vn01_name')),'/subnets/', 'subnet1')]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsg_name'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vn01_name')),'/subnets/', 'subnet1')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId ('Microsoft.Network/publicIPAddresses/', parameters('pipDC01_name'))]"
                            }
                        }
                        
                    }
                ]
            }
        },
        
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-03-01",
            "name": "[parameters('vm_name')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[parameters('nicDC01_name')]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },

                "osProfile": {
                    "computerName": "[parameters('vm_name')]",
                    "adminUsername": "[parameters('admin_name')]",
                    "adminPassword": "[parameters('admin_password')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('vm_name'),'_OSDisk')]",
                        "caching": "ReadOnly",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "StandardSSD_LRS"
                        }
                    },
                    "dataDisks": [
                        {
                            "name": "[concat(parameters('vm_name'), '_DataDisk')]",
                            "caching": "ReadWrite",
                            "createOption": "Empty",
                            "diskSizeGB": 20,
                            "managedDisk": {
                                "storageAccountType": "StandardSSD_LRS"
                            },
                            "lun": 0
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nicDC01_name'))]"
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {}
}